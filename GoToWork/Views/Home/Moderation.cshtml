@model List<GoToWork_Models.Models.VM.UserVM>


@{
    ViewData["Title"] = "Модерация пользователей";
}

<body>
    @if (Model.Count() != 0)
    {
        <h1>Список пользователей</h1>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <table class="table">
                        <thead class="thead-light">
                            <tr>
                                <th scope="col">id</th>
                                <th scope="col">Псевдоним</th>
                                <th scope="col">Роль</th>
                                <th scope="col">Действие</th>
                            </tr>
                        </thead>
                        <tbody class="customtable">
                            <tr>
                                @foreach (var user in Model)
                                {
                                <tr>
                                    <td>@user.Users.Id</td>
                                    <td>@user.Users.UserName</td>
                                    <td>@user.RoleName</td>
                                    @if(user.RoleName!="Admin")
                                    {
                                    <td><a asp-action="Delete" class="btn btn-danger w-100" asp-route-id="@user.Users.Id">Удалить</a></td>
                                    }
                                </tr>
                                }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    
</body>