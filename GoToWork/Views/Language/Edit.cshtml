@model GoToWork_Models.Models.Language

@{
    ViewData["Title"] = "Редактирование категории";
}
<body>
    <form method="post" asp-action="Edit">
        <input asp-for="Id" hidden />
        <div class="border p-3">
            <div class="form-group row">
                <h2 class="pl-3">Редактировать категорию</h2>
            </div>
            <div class="row">
                <div class="col-12">

                    <div class="form-group row">
                        <div class="col-2">
                            <label asp-for="Name"></label>
                        </div>
                        <div class="col-10">
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-2">
                            <label asp-for="Description"></label>
                        </div>
                        <div class="col-10">
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-5 offset-7 row">
                            <div class="col">
                                <a asp-action="Index" asp-controller="Language" class="btn btn-info w-100"><i class="fas fa-sign-out-alt"></i> Назад</a>
                            </div>

                            <div class="col">
                                <input type="submit" class="btn btn-success w-100" value="Изменить" />
                            </div>

                            <div class="col">
                                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger w-100"><i class="fas fa-sign-out-alt"></i>Удалить</a>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</body>

