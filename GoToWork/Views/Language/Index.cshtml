@model IEnumerable<GoToWork_Models.Models.Language>

<body>
    @if (Model.Count() != 0)
    {
        <h1>Список категорий</h1>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <table class="table">
                        <thead class="thead-light">
                            <tr>
                                <th scope="col">id</th>
                                <th scope="col">Название</th>
                                <th scope="col">Детали</th>
                                <th scope="col">Действие</th>
                            </tr>
                        </thead>
                        <tbody class="customtable">
                            <tr>
                                @foreach (var lang in Model)
                                {
                                <tr>
                                    <td>@lang.Id</td>
                                    <td>@lang.Name</td>
                                    <td>@lang.Description</td>
                                    <td><a asp-action="Edit" class="btn btn-primary w-100" asp-route-id="@lang.Id">Открыть</a></td>
                                </tr>
                                }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <h1>Пусто!</h1>
    }
    <br>
    <a asp-action="Create" asp-controller="Language" class="btn btn-success w-100"><i class="bi bi-plus-square-dotted"></i>Добавить</a>
</body>