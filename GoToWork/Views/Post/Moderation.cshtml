@model IEnumerable<GoToWork_Models.Models.Post>

@{
    ViewData["Title"] = "Модерация Статей";
}

<body>
    @if (Model.Count() != 0)
    {
        <h1>Список предложенных статей</h1>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <table class="table">
                        <thead class="thead-light">
                            <tr>
                                <th scope="col">Язык</th>
                                <th scope="col">Вопрос</th>
                                <th scope="col">Дата</th>
                                <th scope="col">Имя автора</th>
                                <th scope="col">Действие</th>
                            </tr>
                        </thead>
                        <tbody class="customtable">
                            <tr>
                                @foreach (var post in Model)
                                {
                                    <tr>
                                        <td>@post.Language.Name</td>
                                        <td>@post.ShortQuestion</td>
                                        <td>@post.Date</td>
                                        <td>@post.AuthorName</td>
                                        <td><a asp-action="Details" class="btn btn-primary w-100" asp-route-id="@post.Id">Открыть</a></td>
                                    </tr>
                                }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <h1>Пусто!</h1>
    }
    <br>
    <a asp-action="Create" asp-controller="Post" class="btn btn-success w-100"><i class="bi bi-plus-square-dotted"></i>Добавить</a>
</body>