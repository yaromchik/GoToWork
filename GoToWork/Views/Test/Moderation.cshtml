@model IEnumerable<GoToWork_Models.Models.MyTest>

    
@{
    ViewData["Title"] = "Модерация тестов";
}

<body>
    @if (Model.Count() != 0)
    {
        <h1>Список Тестов</h1>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <table class="table">
                        <thead class="thead-light">
                            <tr>
                                <th scope="col">id</th>
                                <th scope="col">Язык</th>
                                <th scope="col">Вопрос</th>
                                <th scope="col">Действие</th>
                            </tr>
                        </thead>
                        <tbody class="customtable">
                            <tr>
                                @foreach (var test in Model)
                                {
                                <tr>
                                    <td>@test.Id</td>
                                    <td>@test.Language.Name</td>
                                    <td>@Html.Raw(test.Question)</td>
                                    <td><a asp-action="Edit" class="btn btn-primary w-100" asp-route-id="@test.Id">Открыть</a></td>
                                </tr>
                                }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <h1>Пусто!</h1>
    }
    <br>
    <a asp-action="Create" asp-controller="Test" class="btn btn-success w-100"><i class="bi bi-plus-square-dotted"></i>Добавить</a>
</body>